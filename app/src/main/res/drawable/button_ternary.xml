<!-- res/drawable/rounded.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid background color (white in this example) -->
    <solid android:color="#FFFDE7" />

    <!-- Stroke/border -->
    <stroke
        android:width="1dp"
        android:color="#ECEFF1" />

    <!-- Corners radius -->
    <corners
        android:radius="15dp" />

</shape>