<!-- res/drawable/rounded.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid background color (white in this example) -->
    <solid android:color="#FAFAFA" />

    <!-- Stroke/border -->
    <stroke
        android:width="1.2dp"
        android:color="#E2C6C8C8" />

    <!-- Corners radius -->
    <corners
        android:radius="20dp" />

</shape>